<% image_for_object = @image_for.find(@image_for_id) -%>
<% return_path = params[:return_to] ? params[:return_to] : polymorphic_path([image_for_object, :model_images]) -%>
<h1>Upload <%= @image_for -%> Image: <%= link_to image_for_object.title, url_for(image_for_object) -%></h1>

<%= error_messages_for :model_image -%>

<%= form_tag({:action => :create}, :multipart => true) do %>
    <%= hidden_field_tag(:model_id, @image_for_id ) -%>
    <%= hidden_field_tag(:return_to, return_path) -%>
    <br/>

    <div class="center-block">
      <p>
        <b>Image file: </b>
        <%= file_field 'model_image', 'image_file' %>
      </p>
      <br/>

      <%= submit_tag "Upload", data: { disable_with: 'Uploading...' } %>
      or <%= cancel_button(return_path) -%>
    </div>
<% end %>
